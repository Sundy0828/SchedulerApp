
@{
    ViewBag.Title = "Add Major";
}

<h2>Add Major</h2>

<hr />

@using (Html.BeginForm("CreateMajor", "Admin", FormMethod.Post))
{

    <div class="row">
        <div class="col-sm-9">
            <div class="row">
                <div class="col-sm-12">
                    <h4>Name</h4>
                    <input id="name" name="name" type="text" class="form-control" placeholder="Enter Major Name" required autofocus />
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <h4>IsMajor</h4>
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" id="customCheck" name="isMajor" checked>
                        <label class="custom-control-label" for="customCheck">Is this a major (not minor)</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <br />
                    <button class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Major
                    </button>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>

}
@section Scripts {
    <script>
        $(function () {
            var element = document.getElementById("ActiveAdmin");
            element.classList.add("active");
        });
    </script>
}